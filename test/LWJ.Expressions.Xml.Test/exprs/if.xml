<?xml version="1.0" encoding="utf-8" ?>
<expression xmlns:x="urn:schema-lwj:expression"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="urn:schema-lwj:expression ../../../resources/lwj.expr.xsd"
>
  <expr name="ifThen" result="true" resultType="bool">
    <!--( if(true) true;)-->
    <x:return>
      <x:if>
        <x:true/>
        <x:true/>
      </x:if>
    </x:return>
  </expr>
  <expr name="else" result="true" resultType="bool">
    <!--(  true? true:false)-->
    <x:return>
      <x:if>
        <x:true/>
        <x:true/>
        <x:else>
          <x:false/>
        </x:else>
      </x:if>
    </x:return>
  </expr>
  <expr name="else2" result="false" resultType="bool">
    <!--(  false? true:false)-->
    <x:return>
      <x:if>
        <x:false/>
        <x:true/>
        <x:else>
          <x:false/>
        </x:else>
      </x:if>
    </x:return>
  </expr>
  <expr name="elseIf" result="2" resultType="int">
    <x:return>
      <x:if>
        <x:false/>
        <x:int>0</x:int>
        <x:elseIf>
          <x:true/>
          <x:int>2</x:int>
          <x:else>
            <x:int>3</x:int>
          </x:else>
        </x:elseIf>
        <x:else>
          <x:int>1</x:int>
        </x:else>
      </x:if>
    </x:return>
  </expr>
  <expr name="elseIf2" result="1" resultType="int">
    <x:return>
      <x:if>
        <x:false/>
        <x:int>0</x:int>
        <x:elseIf>
          <x:false/>
          <x:int>2</x:int>
          <x:else>
            <x:int>3</x:int>
          </x:else>
        </x:elseIf>
        <x:else>
          <x:int>1</x:int>
        </x:else>
      </x:if>
    </x:return>
  </expr>
  <expr name="elseIf3" result="4" resultType="int">
    <x:return>
      <x:if>
        <x:false/>
        <x:int>0</x:int>
        <x:elseIf>
          <x:false/>
          <x:int>2</x:int>
          <x:else>
            <x:int>3</x:int>
          </x:else>
        </x:elseIf>
        <x:elseIf>
          <x:true/>
          <x:int>4</x:int>
        </x:elseIf>
        <x:else>
          <x:int>1</x:int>
        </x:else>
      </x:if>
    </x:return>
  </expr>
  <expr name="nest_if" result="3" resultType="int">
    <x:return>
      <x:if>
        <x:true/>
        <x:if>
          <x:false/>
          <x:int>2</x:int>
          <x:else>
            <x:int>3</x:int>
          </x:else>
        </x:if>
        <x:else>
          <x:int>1</x:int>
        </x:else>
      </x:if>
    </x:return>
  </expr>
</expression>