<?xml version="1.0" encoding="utf-8" ?>
<expression xmlns:x="urn:schema-lwj:expression"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="urn:schema-lwj:expression ../../../resources/lwj.expr.xsd"
>

  <expr name="get_variable" result="1" resultType="int">
    <!--
    int a=1;
     a;
    -->
    <x:vars>
      <x:var type="int">a</x:var>
    </x:vars>
    <x:assign>
      <x:var>a</x:var>
      <x:int >1</x:int>
    </x:assign>
    <x:return>
      <x:var>a</x:var>
    </x:return>
  </expr>

  <expr name="set_variable" result="2" resultType="int">
    <!--
    int a;
    a=2;
    -->
    <x:vars>
      <x:var  type="int">a</x:var>
    </x:vars>
    <x:assign>
      <x:var>a</x:var>
      <x:int>2</x:int>
    </x:assign>
    <x:return>
      <x:var>a</x:var>
    </x:return>
  </expr>

  <expr name="block_variable_set" result="2" resultType="int">
    <x:vars>
      <x:var type="int" >result</x:var>
    </x:vars>
    <x:block>
      <x:vars>
        <x:var type="int"  >a</x:var>
      </x:vars>
      <x:assign>        
        <x:var>a</x:var>
        <x:int>2</x:int>
      </x:assign>
      <x:assign>
        <x:var>result</x:var>
        <x:var>a</x:var>
      </x:assign>
    </x:block>
    <x:return>
      <x:var>result</x:var>
    </x:return>
  
</expr>
</expression>